{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/backend/(.*)",
      "dest": "https://tunegie-production.up.railway.app/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_TIDAL_CLIENT_ID": "@tidal_client_id",
    "REACT_APP_TIDAL_CLIENT_SECRET": "@tidal_client_secret"
  }
}
